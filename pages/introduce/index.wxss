/* pages/introduce/index.wxss */
.introduce_tp{
    width:100%;
    height:360rpx;
}
.introduce_cont{
    padding: 0 32rpx;
    border-radius: 50rpx 50rpx 0 0;
    background: #fff;
    position: absolute;
    left:0;
    top:300rpx;
}
.introduce_cont_title{
    padding: 30rpx 0;
    border-bottom: 1px solid #E5E5E5;
    font-size: 36rpx;
    color:#1A1A1A;
}
.introduce_cont_title text{
    display: inline-block;
    height:50rpx;
    text-indent: 20rpx;
    border-left:6rpx  solid #00C99D;
    font-size: 36rpx;
}
.introduce_cont_text{
    padding: 20rpx 0 100rpx 0;
    font-size: 30rpx;
    color:#424242;
    line-height: 50rpx;
    text-indent: 60rpx;
}